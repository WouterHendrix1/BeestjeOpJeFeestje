@model PersonalDataViewModel

@await Html.PartialAsync("_ProgressBarPartial", 50)

<h2 class="my-4">Vul je persoonlijke gegevens in of log in</h2>

@if (User.Identity.IsAuthenticated)
{
    <p>Je bent al ingelogd als @User.Identity.Name</p>
    <form method="post" asp-action="SubmitPersonalData">
        <input type="hidden" asp-for="Email" value="@User.Identity" />
        <button type="submit" class="btn btn-primary">Verder</button>
    </form>
}
else
{
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h3>Ga verder als gast</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="SubmitPersonalData">
                        <div class="mb-3">
                            <label for="Name" class="form-label">Voornaam</label>
                            <input type="text" id="Name" asp-for="Name" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" id="Email" asp-for="Email" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="PhoneNumber" class="form-label">Telefoonnummer</label>
                            <input type="text" id="PhoneNumber" asp-for="PhoneNumber" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="Address" class="form-label">Adres</label>
                            <input type="text" id="Address" asp-for="Address" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">Verder</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <h3>Log in</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Login">
                        <div class="mb-3">
                            <label for="Email" class="form-label">Email</label>
                            <input type="email" id="Email" name="Email" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="Password" class="form-label">Wachtwoord</label>
                            <input type="password" id="Password" name="Password" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}


